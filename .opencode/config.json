{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "bevy": {
      "type": "local",
      "command": ["./target/debug/bevy_mcp_server"],
      "environment": {
        "BRP_ENDPOINT": "http://127.0.0.1:15721",
        "RUST_LOG": "off"
      }
    },
    "debugger": {
      "type": "local",
      "command": ["./target/debug/debugger_mcp_server"],
      "environment": {
        "CODELLDB_ADAPTER_PATH": "/absolute/path/to/codelldb",
        "RUST_LOG": "off"
      }
    }
  },
  "tools": {
    "bevy_bevy_rpc_raw": false
  }
}
